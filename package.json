{
  "name": "core-api",
  "version": "1.3.0",
  "description": "Core API",
  "main": "dist/index.js",
  "readmeFilename": "README.md",
  "scripts": {
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "build": "npm run lint && npm run clean && tsc",
    "clean": "npm run clean:build",
    "clean:build": "rm -rf dist",
    "ci": "npm run lint && npm test",
    "dev": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_ENV=TEST NODE_TEST=true jest",
    "coverage": "NODE_ENV=TEST NODE_TEST=true jest --coverage || true"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.bdtech.by:trackbot/core-api.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "class-validator": "^0.9.1",
    "delay": "^4.1.0",
    "dotenv": "^6.2.0",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-response-time": "^2.1.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "node-input-validator": "^2.3.3",
    "pg": "^7.7.1",
    "raven": "^2.6.4",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.11",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^23.3.11",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.1",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-response-time": "^2.0.1",
    "@types/koa-router": "^7.0.37",
    "@types/koa__cors": "^2.2.3",
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.18",
    "@types/raven": "^2.5.1",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "pre-commit": "^1.2.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage/"
    ]
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
